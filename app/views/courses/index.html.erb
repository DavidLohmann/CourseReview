<style>
    th {
      background: #404853;
      background: linear-gradient(#687587, #404853);
      color: #fff;
    }
</style>

<div class="page-header">
  <%= link_to "Add a New Course", "/courses/new", :class => "btn btn-md btn-success pull-right" %>

  <h1><%= params[:dept] %> Course List <small>Displaying <%= @course_list.count %> Courses</small></h1>
</div>

<% if @course_list.any? %>
<p> To browse reviews or add a review of your own, please select a course from the list below.</p>

<table class="table table-striped table-hover table-bordered">
    <tr>
      <th> Course </th>
      <th> Course Title </th>
    </tr>

  <% @course_list.each do |course| %>
    <tr>
      <td>
        <a href="/courses/<%= course.id %>/show">
        <%= Department.find_by(:id => course[:department_id]).name %>-<%= course[:course_code] %>
      </td>
      <td><%= course[:title] %></td>
    </tr>

  <% end%>
<% else %>
  <h3>There are no courses listed for this department.</h3>
 <% end %>
  </table>


