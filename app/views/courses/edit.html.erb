<div class="page-header">
  <h1>Edit Course - <small><%= @course.title %></small></h1>
</div>

<form action="/courses/<%= @course.id %>/update">
  <div class="form-group">
      <label class="control-label">Course Department:</label>
      <div class="control-label">
        <select name="department_id" class="form-control" id="department_id">
          <option value=<%= @department.id %> selected><%=  @department.name%></option>

              <% Department.all.order("name").each do |department| %>
                  <option value=<%= Department.find_by(:name => department.name).id %>><%= department.name %></option>
              <% end %>

        </select>
      </div>
  </div>
  <div class="form-group">
    <label>Course Code:</label>
    <input value=<%= @course.course_code %> name="course_code" type="text" class="form-control input-md" placeholder="Enter the 3 digit course code">
  </div>
  <div class="form-group">
    <label>Course Title:</label>
    <input value=<%= @course.title %> name="title" type="text" class="form-control input-md" placeholder="Example: Startup Programming and Management">
  </div>
  <div class="form-group">
    <label>Enter a Course Decription:</label>
    <textarea name="description" class="form-control input-md" rows="5" ><%= @course.description %></textarea>
  </div>
  <button type="submit" class="btn btn-success btn-md">Submit Changes</button>
  or
  <a href="/courses">Cancel</a>
</form>

