<style>
  .divlast{
    border-bottom: 1px gray solid;
    padding-bottom: 10px;
    }
    .course-info{
    border-bottom: 2px #660099 solid;
    padding-bottom: 10px;
    }
    .row{
      padding-bottom: 10px;
    }
    form{
      background-color: #E0E0E0;
      padding: 10px 10px 10px 10px;
    }

</style>
<div class="page-header">
  <h1>My Reviews <small>You've left <%= @reviews.count %> Reviews</small></h1>
</div>

<div class="row">
  <div class="col-md-12">

    <% if @reviews.any? %>
      <% @reviews.each do |review| %>
        <div class="row review">
          <div class="col-md-12">
          <h2><%= Course.find_by(:id => review.course_id).title %></h2>
            <p class="lead">
              <% review.rating.times do %>
                &starf;
              <% end %>
              <%= review.title %>
            </p>
            <p>Professor <%= review.professor %></p>

            <table class="table table-striped table-bordered">
              <tr>
                <th> Workload </th>
                <th> Focus </th>
                <th> Case Use </th>
              </tr>
              <tr>
                <td><%= review.workload %></td>
                <td><%= review.focus %></td>
                <td><%= review.cases %></td>
              </tr>
            </table>

            <p><%= review.body %></p>
            <p><small>Reviewed on <%= review.created_at %></small></p>
            <br>
            <div class="divlast"></div>
          </div>
        </div>

      <% end %>
    <% else %>
      <h3>You haven't left any course reviews!</h3>
    <% end %>
  </div>


